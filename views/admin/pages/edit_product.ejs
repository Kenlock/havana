<!DOCTYPE HTML>
<html>

<head>
    <title>Diamond</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Diamond" />
    <%- include('../blocks/header_links') %>
</head>

<body>
    <div id="wrapper">
        <!------>
        <nav class="navbar-default navbar-static-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h1> <a class="navbar-brand" href="/admin">Diamond</a></h1>
            </div>
            <div class=" border-bottom">
                <div class="full-left">
                    <section class="full-top">
                        <button id="toggle"><i class="fa fa-arrows-alt"></i></button>
                    </section>
                    <form class=" navbar-left-right">
                        <input type="text" value="Search..." onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search...';}">
                        <input type="submit" value="" class="fa fa-search">
                    </form>
                    <div class="clearfix"> </div>
                </div>
                <%- include('../blocks/top_nav') %>
                    <!-- /.navbar-collapse -->
                    <div class="clearfix">
                    </div>
                    <%- include('../blocks/main_menu') %>
        </nav>
        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="content-main">
                <!--banner-->
                <div class="banner">
                    <h2>
		<a href="index.html">Home</a>
		<i class="fa fa-angle-right"></i>
        <span><%= __('Category') %></span>
        <i class="fa fa-angle-right"></i>
		<span><%= __('Add') %></span>
		</h2>
                </div>
                <!--//banner-->
                <!--content-->

                <div class="col-md-12 " style="min-height:65vh;" id="edit_product">
                    <input type="hidden" id="curentId" value='<%= productId %>' />
                    <div>
                        <div class="col-md-12 panel-content">
                            <form method="post" ref="form" action="/admin/product/edit/<%= productId %>" enctype="multipart/form-data">
                                <div class="col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label for="exampleFormControlSelect1">
                                            <%= __('Loại sản phẩm') %>
                                        </label>
                                        <select class="form-control" name="product_type">
                                            <% categories.forEach((category) => { %>
                                                <option value="<%= category._id %>">
                                                    <%= category.name %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            <%= __('Tên sản phẩm') %>
                                        </label>
                                        <input type="text" class="form-control" name="product_name"
                                        v-model="product.name" placeholder="name" 
                                        required />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            <%= __('Đơn giá') %>
                                        </label>
                                        <input type="text" class="form-control" v-model="product.unit_price" 
                                        name="unit_price" placeholder="unit price" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            <%= __('Giá khuyến mãi') %>
                                        </label>
                                        <input type="text" class="form-control" v-model="product.promo_price" 
                                        name="promo_price" placeholder="promotion price" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            <%= __('Tổng số lượng') %>
                                        </label>
                                        <input type="text" class="form-control" v-model="product.quantity" 
                                        name="quantity" placeholder="quantity" />
                                    </div>

                                    <div class="form-group" v-for="(color, index) in product.colors" :key="`${index}color`">
                                        <div class="form-group row">
                                            <div class="col-xs-6">
                                                <label for="ex1">Màu sản phẩm</label>
                                                <input class="form-control" type="color" v-model="color.code" name="color[]" :key="index" required />
                                            </div>
                                            <div class="col-xs-6">
                                                <label for="ex1">Số lượng tương ứng</label>
                                                <div class="input-group">
                                    
                                                <input type="text" class="form-control" v-model="color.quantity" :key="`${index}color`" name=color[] required />
                                                <span class="input-group-btn">
                                                        <button class="btn btn-secondary" type="button" @click="removeColor(index)"> 
                                                            <i class="fa fa-trash-o" style="color:#F25C27;"></i>
                                                        </button>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="button" class="btn btn-primary btn-xs" @click="adMoreColor" style="background: #F25C27;
										border-color: #F25C27;">Thêm màu</button>
                                    </div>

                                    <div class="form-group" v-for="(size, index) in product.size" :key="`${index}size`">
                                            <div class="form-group row">
                                                <div class="col-xs-6">
                                                    <label for="ex1">Kích cỡ</label>
                                                    <select name="size[]" class="form-control">
                                                        <template v-for="sizeAvai in sizes">
                                                            <option v-if="size.code === sizeAvai" :value="sizeAvai" selected>{{sizeAvai}}</option>
                                                            <option v-else :value="sizeAvai">{{sizeAvai}}</option>
                                                        </template>
                                                    </select>
                                                </div>
                                                <div class="col-xs-6">
                                                    <label for="ex1">Số lượng tương ứng</label>
                                                    <div class="input-group">
                                                    <input type="text" class="form-control" :key="`${index}qty`" v-model="size.quantity" name=size[] required/>
                                                    <span class="input-group-btn">
                                                            <button class="btn btn-secondary" type="button" @click="removeSize(index)"> 
                                                                <i class="fa fa-trash-o" style="color:#F25C27;"></i>
                                                            </button>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                                <button type="button" class="btn btn-primary btn-xs" @click="adMoreSize" style="background: #F25C27;
                                                border-color: #F25C27;">Thêm kích cỡ</button>
                                            </div>
                                </div>
                                <div class="col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label for="exampleFormControlTextarea1">
                                            <%= __('Mô tả sản phẩm') %>
                                        </label>
                                        <textarea class="form-control" name="description" rows="5">{{ product.descript }}</textarea>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="status" value="1" v-if="product.status === 1" checked />
                                        <input class="form-check-input" type="radio" name="status" value="1" v-else checked />
                                        <label class="form-check-label" for="inlineRadio1">
                                            <%= __('Sản phẩm mới') %>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="status" id="inlineRadio2" v-if="product.status === 2" value="2" checked/>
                                        <input class="form-check-input" type="radio" name="status" id="inlineRadio2" v-else value="2">
                                        <label class="form-check-label" for="inlineRadio2">
                                            <%= __('Hàng sắp về') %>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="status" value="3" v-if="product.status === 3" checked />
                                        <input class="form-check-input" type="radio" name="status" value="3" v-else checked />
                                        <label class="form-check-label" for="inlineRadio3">
                                            <%= __('Đã hết') %>
                                        </label>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12 row">
                                            <label>
                                               <b><%= __('Hình đại diện sản phẩm') %> </b>
                                            </label>
                                            <img class="img-responsive" :src="`/img/${product.image}`" alt="Chania"/>
                                        </div>
                                        <label for="exampleFormControlFile1">
                                            <%= __('Thay đổi hình đại diện') %>
                                        </label>
                                        <input type="file" class="form-control-file" name="avatar" accept="image/*">
                                    </div>
                                    <div class="col-md-12 row">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <label>
                                                    <b><%= __('Ảnh chi tiết sản phẩm') %> </b>
                                                </label>
                                            </div>
                                            <div class="col-md-4 row" v-for="(item, index) in product.image_details">
                                                <img class="img-responsive" :src="`/img/${item}`" alt="Chania"/>
                                                <input type="hidden" name="tmp" :value="item"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 row">
                                        <div class="col-md-6 form-group">
                                            <div class="col-md-12 form-group" v-for="detail in imgDetailsNum">
                                                <label for="exampleFormControlFile1">
                                                    <%= __('Thêm ảnh chi tiết ') %>
                                                </label>
                                                <input type="file" class="form-control-file" name="details" accept="image/*">
                                            </div>
                                        </div>
                                        <div class="col-md-6 form-group">
                                            <button type="button" class="btn btn-admore" @click="imgDetailsNum += 1">
                                                <i class="fa fa-plus" aria-hidden="true"></i>
                                                <span>Thêm</span>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-md-12 row">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary" style="background: #F25C27;
											border-color: #F25C27;">Hoàn tất</button>
                                            <button type="reset" class="btn btn-primary" style="background: rgb(201, 198, 197);
											border-color: rgb(151, 149, 149);">Hủy</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
                <div class="clearfix"> </div>

                <!--//content-->
                <!---->
                <div class="copy">
                        <p> &copy; xdangminhtruongx@gmail.com | Design by <a href="#" target="_blank">Dang Minh Truong</a> </p>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
        </div>
        <%- include('../blocks/footer_links') %>
            <% if(typeof messages !== 'undefined'){ %>
                <script>
                    toastr.options.closeButton = true;
                    toastr.success('Cập nhật sản phẩm thành công!');
                </script>
            <% } %>
</body>

</html>