<!DOCTYPE HTML>
<html>
	<head>
		<title>Diamond
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<meta name="keywords" content="Diamond" />
        <%- include('../blocks/header_links') %>
        <script src="/admin/ckeditor/ckeditor.js"></script>
	</head>
	<body>
		<div id="wrapper">
		<!------>
		<nav class="navbar-default navbar-static-top" role="navigation">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			</button>
			<h1> <a class="navbar-brand" href="/admin">Diamond</a></h1>
		</div>
		<div class=" border-bottom">
			<div class="full-left">
				<section class="full-top">
					<button id="toggle"><i class="fa fa-arrows-alt"></i></button>	
				</section>
				<form class=" navbar-left-right">
					<input type="text"  value="Search..." onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search...';}">
					<input type="submit" value="" class="fa fa-search">
				</form>
				<div class="clearfix"> </div>
			</div>
			<%- include('../blocks/top_nav') %>
			<div class="clearfix">
			</div>
			<%- include('../blocks/main_menu') %>
		</nav>
		<div id="page-wrapper" class="gray-bg dashbard-1">
		<div class="content-main">
		<div class="banner">
		<h2>
		<a href="index.html">Trang quản trị</a>
		<i class="fa fa-angle-right"></i>
        <span><%= __('Loại sản phẩm') %></span>
        <i class="fa fa-angle-right"></i>
		<span><%= __('Thêm') %></span>
		</h2>
		</div>
		<div class="content-top">
		<div class="col-md-12 " style="min-height:65vh;" id="post_edit">
            <div >
                <div class="col-md-12 panel-content">
                    <input type="hidden" value="<%= id %>" id="current_post_id"/>
                    <form action="/admin/post/update/<%= id %>" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                                <img :src="`/img/${avata}`" alt="Chania" class="img-responsive"/>
							<label for="exampleFormControlFile1">
								<%= __('Thay đổi đại diện bài viết ') %>
							</label>
							<input type="file" class="form-control-file" name="avatar" accept="image/*">
						</div>
                        <div class="form-group">
                            <label for="email"><%= __('Tiêu đề bài viết') %>:</label>
							<input type="text" class="form-control" name="title" v-model="title" required>
							<p style="color :red;">{{ alertTitleNull }}</p>
						</div>
                        <div class="form-group">
                            <label for="pwd"><%= __('Nội dung bài viết') %>:</label>
							<textarea class="form-control" rows="5" id="post_edit_content" name="content" v-model="content" required></textarea>
							<p style="color :red;">{{ alertContentNull }}</p>
                        </div>
                        <button type="submit" class="btn btn-default" style="color: #999;"><%= __('Xong') %></button>
                    </form>
                </div>
            </div>
            
		</div>
		<div class="clearfix"> </div>
		</div>
		<div class="copy">
				<p> &copy; xdangminhtruongx@gmail.com | Design by <a href="#" target="_blank">Dang Minh Truong</a> </p>
		</div>
		</div>
		<div class="clearfix"> </div>
		</div>
		</div>
        <%- include('../blocks/footer_links') %>
        <% if(typeof messages !== 'undefined'){ %>
			<script>
				toastr.options.closeButton = true;
				toastr.error('Có lỗi xảy ra !');
			</script>
		<% } %>
	</body>
</html>