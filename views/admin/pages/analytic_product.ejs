<!DOCTYPE HTML>
<html>

<head>
	<title>Diamond</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="keywords" content="Diamond" />
	<%- include('../blocks/header_links') %>
</head>

<body>
	<div id="wrapper">
		<!------>
		<nav class="navbar-default navbar-static-top" role="navigation">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<h1>
					<a class="navbar-brand" href="/admin">Diamond</a>
				</h1>
			</div>
			<div class=" border-bottom">
				<div class="full-left">
					<section class="full-top">
						<button id="toggle">
							<i class="fa fa-arrows-alt"></i>
						</button>
					</section>
					<form class=" navbar-left-right">
						<input type="text" value="Search..." onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search...';}">
						<input type="submit" value="" class="fa fa-search">
					</form>
					<div class="clearfix"> </div>
				</div>
				<%- include('../blocks/top_nav') %>
					<div class="clearfix">
					</div>
					<%- include('../blocks/main_menu') %>
		</nav>
		<div id="page-wrapper" class="gray-bg dashbard-1">
			<div class="content-main">
				<div class="banner">
					<h2>
						<a href="index.html">Trang quản trị</a>
						<i class="fa fa-angle-right"></i>
						<span>
							<%= __('Loại sản phẩm') %>
						</span>
						<i class="fa fa-angle-right"></i>
						<span>
							<%= __('Thêm') %>
						</span>
					</h2>
				</div>
				<div class="content-top">
					<div class="col-md-12 " style="min-height:65vh; font-family: 'OleoScript-Regular';" id="product_statistic">
						<div class="col-md-12 panel-bill-detail">
							<div class="col-md-12 well top_bar_bill_detail">
								<strong>Thống kê sản phẩm</strong>
							</div>
							<div class="col-md-12 ">
								<div class="check-out show_bill_details scrollbar" id="style-7">
									<table class="table table-striped">
										<thead>
											<tr>
												<th>Ảnh</th>
												<th>Tên sản phẩm</th>
												<th>Số lượng bán ra</th>
												<th>Số lượng còn</th>
												<th>
													Thao tác
												</th>
											</tr>
										</thead>
										<tbody>
											<tr v-for="(item, index) in products" :key="index">
												<td>
													<img :src="`/img/${item.image}`" class="img-responsive" width="30px" height="50px">
												</td>
												<td>{{ item.name }}</td>
												<td>{{ item.saled }}</td>
												<td>{{ item.quantity }}</td>
												<td>
													<a :href="`/admin/product/edit/${item._id}` " class="btn btn-primary btn-xs">Cập nhật</a>
												</td>
											</tr>
										</tbody>
									</table>

								</div>
								<div class="col-md-12 row" style="padding-top: 2vh; padding-bottom: 2vh;" data-spy="affix" data-offset-top="197">
									<div class="col-md-3">
										<a type="button" class="btn btn-info" @click="currentHas()">
											Tổng quan
											<i class="fa fa-pie-chart"></i>
										</a>
									</div>
									<div class="col-md-3">
										<a type="button" class="btn btn-warning" @click="outOf()">
											Sản phẩm sắp hết
											<i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
										</a>
									</div>
									<div class="col-md-3">
										<button type="button" class="btn btn-danger" @click="inventory()">
											Sản phẩm đã hết
											<i class="fa fa-outdent" aria-hidden="true"></i>
										</button>
									</div>

									<div class="col-md-3">
										<div class="span12">
											<div id="custom-search-form" class="form-search form-horizontal pull-right">
												<div class="input-append span12">
													<input type="text" class="search-query" placeholder="Tìm kiếm" v-model="keywords" @change="search">
													<button type="submit" class="btn"><i class="icon-search"></i></button>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="clearfix"> </div>
							</div>
						</div>
					</div>
					<div class="clearfix"> </div>
				</div>

			</div>

		</div>
		</div>
		<%- include('../blocks/footer_links') %>
			<% if(typeof messages !== 'undefined'){ %>
				<script>
					toastr.options.closeButton = true;
					toastr.success('Xóa đơn hàng thành công !');
				</script>
				<% } %>
</body>

</html>