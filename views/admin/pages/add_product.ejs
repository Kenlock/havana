			<div class="col-md-12 " style="min-height:65vh;" id="add_product">
				<div >
					<div class="col-md-12 panel-content">
						<form method="post" ref="form" action="/admin/product/add" enctype="multipart/form-data" v-on:submit.prevent="checkValidate">
							<div class="col-md-6 col-sm-12">
									<div class="form-group">
										<label for="exampleFormControlSelect1"><%= __('Product\'s type ') %></label>
										<select class="form-control" name="product_type">
											<% categories.forEach((category) => { %>
												<option value="<%= category._id %>">
														<%= category.name %>
												</option>
											<% }) %>
										</select>
									</div>
								<div class="form-group">
									<label for="exampleInputEmail1"><%= __('Product\'s name') %></label>
									<input type="text" class="form-control" id="exampleInputEmail1" 
										name="product_name" placeholder="name" required>
								</div>
								<div class="form-group">
									<label for="exampleInputEmail1"><%= __('Product\'s unit price') %></label>
									<input type="text" class="form-control" v-model="unit_price" @change="validateUnitPrice"
										name="unit_price" placeholder="unit price" required>
									<small id="emailHelp" class="form-text text-muted">
										<p style="color:red;">{{ unitPriceAlert }}</p>
									</small>
								</div>
								<div class="form-group">
									<label for="exampleInputEmail1"><%= __('Product\'s promotion price') %></label>
									<input type="text" class="form-control" v-model="promo_price" 
										name="promo_price" placeholder="promotion price" @change="validatePromoPrice">
									<small id="emailHelp" class="form-text text-muted" >
										<p style="color:red;">{{ promoPriceAlert }} </p>
									</small>
								</div>
								<div class="form-group">
										<label for="exampleInputEmail1"><%= __('Product\'s quantity') %></label>
										<input type="text" class="form-control" v-model="quantity" @change= "validateQuantity"
											name="quantity" placeholder="quantity">
										<small id="emailHelp" class="form-text text-muted">
											<p style="color:red;">{{ quantityAlert }}</p>
										</small>
								</div>
								<div class="form-group">
										<label for="exampleInputEmail1"><%= __('Product\'s size') %></label>
										<input type="text" class="form-control" name="size[]" 
												value="S,M,L,Xl,XXl" data-role="tagsinput" required>
										
										<small id="emailHelp" class="form-text text-muted">
											We'll never share your email with anyone else.
										</small>
								</div>
							
								
							</div>
							<div class="col-md-6 col-sm-12">
									<div class="form-group" v-for = "(color, index) in colors" :key="index">
											<label class="form-label"><%= __('Product\'s color') %></label>
												<input style="width:89%" type="color" 
														:value="color" name="color[]" v-model="colors[index]">
												<button type="button" v-if="index == 0" disabled class="btn-xs btn-remove-color" @click="removeColor(index)">
													<i class="fa fa-trash-o" style="color:#F25C27;"></i>
												</button>
												<button type="button" v-else class="btn-xs btn-remove-color" @click="removeColor(index)">
													<i class="fa fa-trash-o" style="color:#F25C27;"></i>
												</button>
											
									</div>
									<div class="form-group">
										<button type="button" class="btn btn-primary btn-xs" @click="adMoreColor"
										style="background: #F25C27;
										border-color: #F25C27;">More colors</button>
									</div>
								<div class="form-group">
									<label for="exampleFormControlTextarea1"><%= __('Product\'s description') %></label>
									<textarea class="form-control" name="description" rows="5"></textarea>
								</div>
								<div class="form-check form-check-inline">
									<input class="form-check-input" type="radio"  
									name="status" value="1" checked>
									<label class="form-check-label" for="inlineRadio1"><%= __('New') %></label>
								</div>
								<div class="form-check form-check-inline">
									<input class="form-check-input" type="radio" 
									name="status" id="inlineRadio2" value="2">
									<label class="form-check-label" for="inlineRadio2"><%= __('Comming soon') %></label>
								</div>
								<div class="form-check form-check-inline">
									<input class="form-check-input" type="radio" name="status" 
										id="inlineRadio3" value="3">
									<label class="form-check-label" for="inlineRadio3"><%= __('Expire') %></label>
