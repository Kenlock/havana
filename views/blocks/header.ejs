                    <div class="pull-left">
                        <div class="navbar" id="topnav">
                            <div class="navbar-inner">
                                <ul class="nav" >
                                    <li><a class="home active" href="/"><%= __('Home') %></a> </li>
                                    <% if(typeof user !== 'undefined'){ %>
                                        <li><a class="myaccount" href="#"><%= user.username %></a> </li>
                                    <% }else { %>
                                        <li><a class="myaccount" href="/login"><%= __('My Account')  %></a> </li>
                                    <% } %>
